<% include ./partials/header.ejs%>

<div class="w-full min-h-screen bg-slate-700 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){%>
            <div class="card w-56">
                <div class=" w-full h-40 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image%>" alt="">
                </div>
                <h5 class="mt-1 py-1 text-center rounded-md bg-slate-950 text-base"><%= elem.title %></h5>
                <h6 class="mt-2 text-center text-sm">User: <%= elem.description %></h6>
                <h6 class="mt-2 text-center font-semibold text-yellow-500 text-base">User: <%= elem.user.username %></h6>
            </div>
        <% }) %>
    </div>
</div>






















